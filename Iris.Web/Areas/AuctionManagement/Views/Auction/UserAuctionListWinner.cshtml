@model List<Iris.ViewModels.AuctionItemViewModel>
@{
    ViewBag.Title = "حراجی های برنده شده";
    Layout = "~/Areas/User/Views/Shared/_ProfileLayout.cshtml";
    var i = 1;
}

<div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
    <div class="row">
        <div class="col-12">
            <div class="section-title text-sm-title title-wide mb-1 no-after-title-wide dt-sl mb-2 px-res-1">
                <h2>حراجی های برنده شده</h2>
            </div>
            <div class="dt-sl">
                <div class="table-responsive">
                    <table class="table table-order">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>تصویر</th>
                                <th>عنوان</th>
                                <th>تاریخ ثبت</th>
                                <th>شروع حراجی</th>
                                <th>پایان حراجی</th>
                                <th>برنده</th>
                                <th>تعداد پیشنهادات</th>
                                <th>جزییات</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td> <img style="width:223px;" src="@item.ImageAddress" alt="@item.Title"> </td>
                                    <td>@item.Title</td>
                                    <td>@item.CrateDateFa</td>
                                    <td>@item.StartDateFa</td>
                                    <td>@item.StopDateFa</td>

                                    @{
                                        var lastBidUseFullName = item.BidHistories.Count > 0 ? item.BidHistories.LastOrDefault().User.FirstName + item.BidHistories.LastOrDefault().User.LastName : "-";
                                    }

                                    <td>@lastBidUseFullName</td>
                                    <td>@item.BidHistories.Count</td>

                                    <td class="details-link">
                                        <a href="@Url.Action("Index","Auction", new { area = "AuctionManagement", id = item?.Id??0 })">
                                            <i class="mdi mdi-chevron-left"></i>
                                        </a>
                                    </td>

                                </tr>
                            }


                            <tr>
                                <td class="link-to-orders" colspan="9">
                                    <a href="#">
                                        مشاهده لیست حراجی
                                        ها
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>