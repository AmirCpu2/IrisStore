
@{
    //ViewBag.Title = "نمایه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    @RenderSection("subStyles", required: false)
}

<div class="container main-container">
    <div class="row">
        <!-- Start Sidebar -->
        @{
            Html.RenderAction("ProfileSidebar", "Home", new { area = "user" });
        }
        <!-- End Sidebar -->

        <!-- Start Content -->
        @RenderBody()
        <!-- End Content -->
    </div>
    <div class="mt-5">
        <!-- Start Product-Slider -->
        @{
            Html.RenderAction("RecommendedProductCarousel", "Home", new { area = "Product" });
        }
        <!-- End Product-Slider -->
    </div>
</div>


@section scripts
{
    @RenderSection("subScripts", required: false)
}