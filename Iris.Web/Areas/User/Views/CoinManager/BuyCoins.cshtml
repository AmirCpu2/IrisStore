@*@model Iris.ViewModels.CoinFactorViewModel*@

@{
    ViewBag.Title = "خرید سکه";
    Layout = "~/Areas/User/Views/Shared/_ProfileLayout.cshtml";

    bool? IsSuccess = ViewBag?.IsSuccess != null ? ViewBag.IsSuccess : null;

}


<div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
    <div class="row">

        <div class="col-md-10 col-sm-12 mx-auto">
            <div class="px-3 px-res-0">
                <div class="section-title text-sm-title title-wide mb-1 no-after-title-wide dt-sl mb-2 px-res-1">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="dt-sl">
                    <div class="row">

                        <div class="col-lg-6 col-md-12" style="text-align-last: center;">
                            <div class="card-horizontal-product" style="padding: 16px 16px 16px 16px; ">
                                <div class="card-horizontal-product-content" style="width: 100%; height: 100%; float: none;">
                                    <img src="/Content/img/cp/200.png" style="width: 200px;">
                                    <div class="card-horizontal-product-price">
                                        <span>10,000 تومان</span>
                                    </div>
                                    <div class="card-horizontal-product-buttons">

                                        <a href="@Url.Action("CreateCoinFactor",new { @coinPacketId = (int)Utilities.Enums.CoinPacket.TwoHundred })" class="btn">خرید محصول</a>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12" style="text-align-last: center;">
                            <div class="card-horizontal-product" style="padding: 16px 16px 16px 16px; ">
                                <div class="card-horizontal-product-content" style="width: 100%; height: 100%; float: none; ">
                                    <img src="/Content/img/cp/500.png" style="width: 200px;">
                                    <div class="card-horizontal-product-price">
                                        <span>30,000 تومان</span>
                                    </div>
                                    <div class="card-horizontal-product-buttons">

                                        <a href="@Url.Action("CreateCoinFactor",new { @coinPacketId = (int)Utilities.Enums.CoinPacket.FiveHundred })" class="btn">خرید محصول</a>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-6 col-md-12" name="FavoriteProducts" style="text-align-last: center;">
                            <div class="card-horizontal-product" style="padding: 16px 16px 16px 16px; ">
                                <div class="card-horizontal-product-content" style="width: 100%; height: 100%; float: none; ">
                                    <img src="/Content/img/cp/1000.png" style="width: 200px;">
                                    <div class="card-horizontal-product-price">
                                        <span>60,000 تومان</span>
                                    </div>
                                    <div class="card-horizontal-product-buttons">

                                        <a href="@Url.Action("CreateCoinFactor",new { @coinPacketId = (int)Utilities.Enums.CoinPacket.OneThousand })" class="btn">خرید محصول</a>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12" name="FavoriteProducts" style="text-align-last: center;">
                            <div class="card-horizontal-product" style="padding: 16px 16px 16px 16px; ">
                                <div class="card-horizontal-product-content" style="width: 100%; height: 100%; float: none; ">
                                    <img src="/Content/img/cp/2400.png" style="width: 200px;">
                                    <div class="card-horizontal-product-price">
                                        <span>130,000 تومان</span>
                                    </div>
                                    <div class="card-horizontal-product-buttons">

                                        <a href="@Url.Action("CreateCoinFactor",new { @coinPacketId = (int)Utilities.Enums.CoinPacket.TwoThousandFourHundred })" class="btn">خرید محصول</a>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-6 col-md-12" style="text-align-last: center;">
                            <div class="card-horizontal-product" style="padding: 16px 16px 16px 16px; ">
                                <div class="card-horizontal-product-content" style="width: 100%; height: 100%; float: none; ">
                                    <img src="/Content/img/cp/3200.png" style="width: 200px;">
                                    <div class="card-horizontal-product-price">
                                        <span>180,000 تومان</span>
                                    </div>
                                    <div class="card-horizontal-product-buttons">

                                        <a href="@Url.Action("CreateCoinFactor",new { @coinPacketId = (int)Utilities.Enums.CoinPacket.ThreeThousandTwoHundred })" class="btn">خرید محصول</a>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12" style="text-align-last: center;">
                            <div class="card-horizontal-product" style="padding: 16px 16px 16px 16px; ">
                                <div class="card-horizontal-product-content" style="width: 100%; height: 100%; float: none; ">
                                    <img src="/Content/img/cp/5000.png" style="width: 200px;">
                                    <div class="card-horizontal-product-price">
                                        <span>250,000 تومان</span>
                                    </div>
                                    <div class="card-horizontal-product-buttons">

                                        <a href="@Url.Action("CreateCoinFactor",new { @coinPacketId = (int)Utilities.Enums.CoinPacket.FiveThousand })" class="btn">خرید محصول</a>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section subScripts
{

    @if (IsSuccess != null)
    {
        <script>
                $(function () {
                    @if (IsSuccess??false) {
                        @:toastr.info("پرداخت با موفق انجام شد", "");
                    }
                    else{
                        @:toastr.error("پرداخت نا موفق بود", "");
                    }

                });
        </script>
    }

}
