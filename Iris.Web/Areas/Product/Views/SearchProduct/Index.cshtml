@section scripts{
    <script>

        var value;
        //var values = @availablePricesList;
        var priceMax = @pricesMax;
        var priceMin = @pricesMin;
        var sourceUrl = 'http://localhost/product/getproductsJson';
        var app = angular.module("myApp", []);
        app.controller("myCtrl", function ($scope, $http) {
            searchParams=
            {
                "PageNumber": 1,
                "PageSize": "24",
                "SortBy": "ViewNumber",
                "SortOrder": "desc",
                "ShowStockProductsOnly": false,
                "MinPrice": priceMin,//document.getElementById('priceRange').noUiSlider.get()[0],
                "MaxPrice": priceMax,//$('#priceRange').noUiSlider.get()[1],
                "MinDiscount": null,
                "MaxDiscount": null,
                "SelectedCategories": [] ,
                "SearchTerm": ""
            }

            $http({
                url: sourceUrl,
                method: "post",
                data: searchParams
            }).then(function (response) {
                $scope.products = response.data;
            });



        });

    </script>
    @Scripts.Render("~/bundles/search-product")
}